@model PRSClassesManagement.UsersManagement.User
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@*<style>
        .mk {
            font-weight: 900;
        }
    </style>*@
<div class="container">
    <div class="row mt-100">
        <div class="col-lg-4">
            <div style="margin-top: 7%; padding: 0; width: 250px;">
                <div class="text-center">
                    <img id="blah" src="~/Content/UserImages/@Url.Content(Model.ImageUrl)" alt="" class="img-thumbnail" style="height: 250px; width: 250px; top: 2px;" />
                    <h4 class="mt-2" style="font-family:Roboto, sans-serif"> @Html.DisplayFor(model => model.UserName)</h4>
                </div>
            </div>
        </div>
        <br />
        <div class="col-lg-4 mt-4">
            <div class="form-group">
                @Html.LabelFor(model => model.UserName, "Username")&nbsp;:&nbsp;@Html.DisplayFor(model => model.UserName, new { @class = "mk" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Email, "Email Address")&nbsp;:&nbsp;@Html.DisplayFor(model => model.Email, new { @class = "mk" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.DateofBirth, "Date of Birth")&nbsp;:&nbsp;@Html.DisplayFor(model => model.DateofBirth, new { @class = "mk" })
            </div>
        </div>
    </div>
    <p>
        @Html.ActionLink("Back to List", "Index", "Home")
    </p>
</div>
